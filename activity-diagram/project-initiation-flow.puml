@startuml
title Tech Project Initiation & Planning Flow

start

partition "Phase 1: Discovery" {
    :Interview Stakeholders;
    :Conduct Market Research;
    :Draft Project Charter;
}

partition "Phase 2: Requirements" {
    :Gather User Stories;
    :Create UI/UX Wireframes;
}

partition "Phase 3: Technical Validation" {
    :Select Tech Stack;
    :Design System Architecture;
    :Perform Feasibility Study/PoC;
    
    if (Is the Project Feasible?) then (No)
        :Re-evaluate Requirements;
        detach
    else (Yes)
        :Finalize Tech Specs;
    endif
}

partition "Phase 4: Planning" {
    :Define Milestones & Sprints;
    :Allocate Resources;
    :Perform Risk Assessment;
}

:Project Kickoff Meeting;

stop
@enduml